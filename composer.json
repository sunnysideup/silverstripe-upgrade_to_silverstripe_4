{
    "name": "sunnysideup/upgrade_to_silverstripe_4",
    "type": "silverstripe-module",
    "description": "Upgrade modules to silverstripe 4",
    "keywords": [
        "Silverstripe-CMS",
        "CMS",
        "Silverstripe",
        "upgrade"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nicolaas Francken",
            "email": "modules@sunnysideup.co.nz",
            "role": "lead developer"
        }
    ],
    "extra": {
        "installer-name": "upgrade_to_silverstripe_4"
    },
    "require": {
        "silverstripe/upgrader":                       "dev-master",
        "sunnysideup/php_2_command_line":              "dev-master",
        "phpstan/phpstan":                             "~0.9.2"
    },
    "require-dev-only": {
        "symplify/easy-coding-standard": "^6.0",
        "phpunit/phpunit": "~5.7",
        "squizlabs/php_codesniffer": "~3",
        "phpstan/phpstan-shim": "~0.9.2",
        "symbiote/silverstripe-phpstan": "~3.0.2"
    },
    "autoload": {
        "psr-4": {
            "Sunnysideup\\UpgradeToSilverstripe4\\":"src/",
            "Sunnysideup\\PHP2CommandLine\\":"vendor/sunnysideup/php_2_command_line/src/"
        }
    },
    "scripts": {
        "post-install-cmd": [],
        "post-update-cmd": [
            "php create-list-of-tasks.php"
        ],
        "lint1":[
            "vendor/bin/ecs check src --fix"
        ],
        "lint2":[
            "phpstan analyse src -c phpstan.neon -a vendor/symbiote/silverstripe-phpstan/bootstrap.php --level 0  --ansi"
        ],
        "lint3":[
            "phpstan analyse src -c phpstan.neon -a vendor/symbiote/silverstripe-phpstan/bootstrap.php --level max  --ansi"
        ]
    },
    "minimum-stability": "dev"
}
